<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

 <servlet>
   <servlet-name>loginController</servlet-name>
   <servlet-class>com.Agilysys.Controller.LoginController</servlet-class>
 </servlet>

 <servlet-mapping>
   <servlet-name>loginController</servlet-name>
   <url-pattern>/login</url-pattern>
 </servlet-mapping>


 <servlet>
   <servlet-name>userController</servlet-name>
   <servlet-class>com.Agilysys.Controller.UserController</servlet-class>
 </servlet>

 <servlet-mapping>
   <servlet-name>userController</servlet-name>
   <url-pattern>/search</url-pattern>
   <url-pattern>/success</url-pattern>
 </servlet-mapping>
 
 <servlet>
   <servlet-name>roomController</servlet-name>
   <servlet-class>com.Agilysys.Controller.RoomController</servlet-class>
 </servlet>

 <servlet-mapping>
   <servlet-name>roomController</servlet-name>
   <url-pattern>/fetchRooms</url-pattern>
   <url-pattern>/RoomController</url-pattern>
 </servlet-mapping>
 
 <servlet>
   <servlet-name>bookingController</servlet-name>
   <servlet-class>com.Agilysys.Controller.BookingController</servlet-class>
 </servlet>

 <servlet-mapping>
   <servlet-name>bookingController</servlet-name>
   <url-pattern>/checkInRoom</url-pattern>
   <url-pattern>/viewBookingDetails</url-pattern>
 </servlet-mapping>
 
 <servlet>
   <servlet-name>CheckOutController</servlet-name>
   <servlet-class>com.Agilysys.Controller.CheckOutController</servlet-class>
 </servlet>

 <servlet-mapping>
   <servlet-name>CheckOutController</servlet-name>
   <url-pattern>/checkOutRoom</url-pattern>
 </servlet-mapping>
 
 
 
 <welcome-file-list>
   <welcome-file>loginPage.jsp</welcome-file>
 </welcome-file-list>

</web-app>